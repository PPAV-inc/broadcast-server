{
  "name": "broadcast-server",
  "version": "0.0.1",
  "private": false,
  "description": "PPAV Broadcast Server",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development micro-dev -p 5000",
    "start": "yarn ;env NODE_ENV=production PORT=5000 micro -p ${PORT:-5000}",
    "precommit": "lint-staged",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint:fix && npm run testonly",
    "testonly": "NODE_ENV=test jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit --no-cache",
    "testonly:watch": "jest --watch"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "date-fns": "^1.29.0",
    "dateformat": "^2.0.0",
    "dotenv": "^4.0.0",
    "lodash": "^4.17.4",
    "messaging-api-telegram": "^0.3.4",
    "micro": "^8.0.2",
    "micro-compress": "^1.0.0",
    "micro-cors": "^0.0.4",
    "micro-redirect": "^1.0.0",
    "microrouter": "^2.2.2",
    "moment-timezone": "^0.5.13",
    "mongodb": "^2.2.31",
    "p-each-series": "^1.0.0",
    "p-map": "^1.2.0",
    "ramda": "^0.24.1",
    "tldjs": "^2.2.0",
    "universal-analytics": "^0.4.15"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "micro-dev": "^3.0.0",
    "prettier": "^1.14.3",
    "supertest": "^3.3.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "testPathIgnorePatterns": [
      "node_modules/"
    ]
  }
}
